{% extends "index.j2" %}

<title>{% block title %}Database Create Test{% endblock %}</title>

<header>
  {% block header %}<h1>Database Create Test</h1>{% endblock %}
</header>

{% block body %}
  
<table>
<thead>
  <tr>
    <th>User ID</th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Update</th>
    <th>Delete</th>
  </tr>
</thead>

<tbody>

{% for user in Users %}
  <tr>
    <td>{{ user['id'] }}</td>
    <td>{{ user['first_name'] }}</td>
    <td>{{ user['last_name'] }}</td>
    <td><a class="action" href="{{ url_for('dbUpdateTest', id=user['id']) }}">Edit</a></td>
    <td><a class="action" href="{{ url_for('dbDeleteTest', id=user['id']) }}">Delete</a></td>
  </tr>
{% endfor %}
<tbody>
</table>

<a href="{{ url_for('root') }}">Back to Home - DB Test</a>


{% endblock %}
